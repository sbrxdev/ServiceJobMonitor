<?xml version="1.0" encoding="UTF-8"?>

<entity-facade-xml type="demo">
    <!--  SFTP Example  -->
    <moqui.service.job.ServiceJob jobId="poll_SftpCountFiles_MuckCA" jobName="poll_SftpCountFiles_MuckCA"
                                  description="poll file count sftp"
                                  serviceName="tailorsoft.demo.SftpServices.count#Files"
                                  cronExpression="* 0/5 * ? * * *"
                                  paused="N">
        <parameters parameterName="username" parameterValue="****"/>
        <parameters parameterName="password" parameterValue="****"/>
        <parameters parameterName="host" parameterValue="***"/>
        <parameters parameterName="port" parameterValue="22"/>
        <parameters parameterName="path" parameterValue="/outbound/"/>
    </moqui.service.job.ServiceJob>

    <!-- Monitor Data Elasticsearch   -->
    <tailorsoft.timeseries.Monitor
            jobName="poll_SftpCountFiles_MuckCA"
            title="Files"
            valuePath="value"
            indexName="sftfiles-mucka"
            algorithmEnumId="ALGO_BOUNDS"
    />

    <!--  Bounds for Alerts   -->
    <tailorsoft.timeseries.MonitorBounds
            jobName="poll_SftpCountFiles_MuckCA"
            lower="0"
            upper="10"
            count="3"
    />



    <!--  Temperature Example   -->
    <moqui.service.job.ServiceJob jobId="poll_temperature" jobName="poll_temperature"
                                  description="get temperature salt lake city"
                                  serviceName="tailorsoft.demo.TemperatureServices.get#Temperature"
                                  cronExpression="* 0/5 * ? * * *"
                                  paused="N">
    </moqui.service.job.ServiceJob>

    <tailorsoft.timeseries.Monitor jobName="poll_temperature" title="Temperature"
                                   valuePath="value.temp" indexName="temperature"/>

</entity-facade-xml>