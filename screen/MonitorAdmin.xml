<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd" require-authentication="false"
        menu-image="glyphicon glyphicon-flash"
        menu-image-type="icon">


    <transition name="charts">
        <default-response url="."/>
    </transition>

    <transition name="alerts">
        <default-response url="./Alerts"/>
    </transition>

    <transition name="monitors">
        <default-response url="./Monitors"/>
    </transition>


    <subscreens default-item="Charts"/>


    <widgets>
        <render-mode>
            <text type="html,vuet">
                <![CDATA[
                    <link href="/tsstatic/css/normalize.css" />
                    <link href="/tsstatic/css/style.css" />
                    <script src="/tsstatic/js/main.js" />
                    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/chartjs-plugin-annotation/0.5.7/chartjs-plugin-annotation.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/vega@5.9.0"></script>
<script src="https://cdn.jsdelivr.net/npm/vega-lite@4.0.0"></script>
<script src="https://cdn.jsdelivr.net/npm/vega-embed@6.2.0"></script>
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css"/>
                ]]>
            </text>
        </render-mode>
        <container style="ts-container">
            <subscreens-panel id="MonitorAdminPanel" type="tab"/>
        </container>
    </widgets>
</screen>