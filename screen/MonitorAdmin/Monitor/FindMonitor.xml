<?xml version="1.0" encoding="UTF-8"?>
<screen require-authentication="anonymous-all" default-menu-title="Timeseries Monitors" default-menu-index="2">
    <transition name="listMonitors">
        <default-response url="."/>
    </transition>

    <transition name="monitorDetails">
        <default-response url="../Monitor"/>
    </transition>

    <actions>
        <entity-find entity-name="tailorsoft.timeseries.Monitor" list="monitorList">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <container style="ts-container">
            <form-list name="ListMonitors" list="monitorList" transition="listMonitors" multi="false" dinamic="true"
                       header-dialog="true">
                <auto-fields-entity entity-name="tailorsoft.timeseries.Monitor" field-type="find-display"/>
                <field name="monitorId">
                    <default-field>
                        <link url="monitorDetails" text="${monitorId}" link-type="anchor" parameter-map="[monitorId:monitorId]"/>
                    </default-field>
                </field>
            </form-list>
        </container>
    </widgets>
</screen>