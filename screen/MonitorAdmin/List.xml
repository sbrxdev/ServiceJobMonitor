<?xml version="1.0" encoding="UTF-8"?>
<screen require-authentication="anonymous-all" default-menu-title="Monitor List" default-menu-index="1">
    <transition name="findTutorial">
        <default-response url="."/>
    </transition>

    <transition name="createMonitor">
        <actions>
            <service-call name="create#tailorsoft.timeseries.Monitor" in-map="true"/>
        </actions>
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="tailorsoft.timeseries.Monitor" list="monitorList">
            <search-form-inputs/>
        </entity-find>
    </actions>

    <widgets>
        <label type="h1" text="Active Monitors list"/>
        <container-dialog id="CreateMonitorDialog" button-text="Create New Monitor">
            <form-single name="CreateMonitor" transition="createMonitor" dynamic="true">
                <auto-fields-entity entity-name="tailorsoft.timeseries.Monitor" field-type="edit"/>
                <field name="submitButton">
                    <default-field title="Create">
                        <submit/>
                    </default-field>
                </field>
            </form-single>
        </container-dialog>


        <form-list name="ListTutorials" list="monitorList" transition="findTutorial" multi="true" header-dialog="true">
            <auto-fields-entity entity-name="tailorsoft.timeseries.Monitor" field-type="find-display"/>
        </form-list>


    </widgets>
</screen>
